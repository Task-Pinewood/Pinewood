                <label asp-for="Customer.Title" class="control-label"></label>
                <input asp-for="Customer.Title" class="form-control" />
                <span asp-validation-for="Customer.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.FirstName" class="control-label"></label>
                <input asp-for="Customer.FirstName" class="form-control" />
