@page
@model IndexModel
@{
    ViewData["Title"] = "Pinewood Task - Home page";
}

<div class="text-center">
    <h1 class="display-4">Customers</h1>
    
    <div>
        <a asp-page="./Create">Add Customer</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Customers[0].Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Customers[0].FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Customers[0].LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Customers[0].Postcode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Customers[0].Dob)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Customers[0].Telephone)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Customers)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Postcode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Dob)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telephone)
                    </td>
                    <td>
                        <form method="post">
                            <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a> 
                        </form> 
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
